@using Urbagestion.Model.Models
@model Urbagestion.UI.Web.Models.FacilityViewModels.FacilityIndexViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>FacilityIndexViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpensAt" class="control-label"></label>
                <input asp-for="OpensAt" class="form-control" />
                <span asp-validation-for="OpensAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CloseAt" class="control-label"></label>
                <input asp-for="CloseAt" class="form-control" />
                <span asp-validation-for="CloseAt" class="text-danger"></span>
            </div>
            @if (User.IsInRole(Role.AdminRoleName))
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

