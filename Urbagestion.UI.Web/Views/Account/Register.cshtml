@model RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <h4>Registro de usuario.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-xs-6 form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" autocomplete="given-name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-xs-6 form-group">
            <label asp-for="FirstLastName"></label>
            <input asp-for="FirstLastName" class="form-control" autocomplete="family-name" />
            <span asp-validation-for="FirstLastName" class="text-danger"></span>
        </div>

        <div class="col-xs-6 form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-xs-6 form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" autocomplete="street-address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-xs-6 form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-xs-6 form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="col-xs-6 form-group">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
